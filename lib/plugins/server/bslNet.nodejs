function DummyOpaResponse(at_end){
  this.is_dummy = true;
  this.at_end = at_end;
  this.content = new Array();
}

DummyOpaResponse.prototype = {

  writeHead:function(){},

  setHeader:function(){},

  end:function(chunk){
    if(typeof chunk != 'undefined'){
      this.content.push(chunk)
    }
    this.at_end(this.content.join(""))
  }
}

